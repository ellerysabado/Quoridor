<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Lobby.LobbyScreen">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.Lobby.LobbyScreen">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:gravity="center"
            android:text="Lobby"
            android:textSize="56sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/lobbyInfoRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/lobby_code_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Lobby Code:"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/settingsRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <Switch
                    android:id="@+id/host_player_number_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:height="48dp"
                    android:checked="true"
                    android:showText="true"
                    android:text="Player Amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textOff="2"
                    android:textOn="4"
                    android:textSize="24dp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/playersRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TableRow
                            android:id="@+id/player1_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/player1_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Player 1"
                                android:textSize="24sp"
                                android:textStyle="normal|bold" />

                            <Space
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/host_make_host_player_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:text="Host"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/host_kick_player_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:allowClickWhenDisabled="false"
                                android:shadowColor="#000000"
                                android:text="kick"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </TableRow>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TableRow
                            android:id="@+id/player2_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/player2_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Player 2"
                                android:textSize="24sp"
                                android:textStyle="normal|bold" />

                            <Space
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/host_make_host_player_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:text="Host"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/host_kick_player_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:allowClickWhenDisabled="false"
                                android:gravity="center"
                                android:shadowColor="#000000"
                                android:text="kick"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TableRow
                            android:id="@+id/player3_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/player3_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Player 3"
                                android:textSize="24sp"
                                android:textStyle="normal|bold" />

                            <Space
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/host_make_host_player_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:text="Host"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/host_kick_player_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:allowClickWhenDisabled="false"
                                android:gravity="center"
                                android:shadowColor="#000000"
                                android:text="kick"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TableRow
                            android:id="@+id/player4_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/player4_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Player 4"
                                android:textSize="24sp"
                                android:textStyle="normal|bold" />

                            <Space
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/host_make_host_player_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:text="Host"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/host_kick_player_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:allowClickWhenDisabled="false"
                                android:gravity="center"
                                android:shadowColor="#000000"
                                android:text="kick"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </TableRow>
                    </LinearLayout>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/lobbyControlRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="bottom|center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/host_start_game_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Game"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/leave_lobby_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F87676"
                        android:text="Leave Lobby"
                        android:textAllCaps="true"
                        android:textSize="20sp" />
                </LinearLayout>

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_lobby"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>