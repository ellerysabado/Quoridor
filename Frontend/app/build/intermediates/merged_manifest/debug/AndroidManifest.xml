<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quoridor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="31"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.quoridor.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.quoridor.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="com.example.quoridor.utils.net.RequestController"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Quoridor"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.quoridor.ui.game.LocalGameScreen"
            android:exported="false" />
        <activity
            android:name="com.example.quoridor.ui.AccountScreen"
            android:exported="false" />
        <activity
            android:name="com.example.quoridor.ui.LoginScreen"
            android:exported="false" />
        <activity
            android:name="com.example.quoridor.ui.game.gameScreen"
            android:exported="false" />
        <activity
            android:name="com.example.quoridor.ui.Lobby.LobbyScreen"
            android:exported="false" />
        <activity
            android:name="com.example.quoridor.ui.Lobby.LobbyPreselectionScreen"
            android:exported="false" />
        <activity
            android:name="com.example.quoridor.ui.StartScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.quoridor.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />
    </application>

</manifest>